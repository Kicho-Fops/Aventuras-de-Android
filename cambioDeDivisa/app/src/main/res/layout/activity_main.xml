<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/edtFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:hint="Cantidad a convertir"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spnConvertTo" />

        <TextView
            android:id="@+id/tvConvertFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Convertir de:"
            app:layout_constraintBottom_toTopOf="@+id/spnConvertFrom"
            app:layout_constraintStart_toStartOf="@+id/spnConvertFrom" />

        <TextView
            android:id="@+id/tvConvertTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Convertir a:"
            app:layout_constraintBottom_toTopOf="@+id/spnConvertTo"
            app:layout_constraintStart_toStartOf="@+id/spnConvertTo" />

        <Spinner
            android:id="@+id/spnConvertFrom"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <Spinner
            android:id="@+id/spnConvertTo"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spnConvertFrom" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Convertidor de Divisas"
            android:textColor="#000000"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvQuanitiyFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad a Convertir: "
            app:layout_constraintBottom_toTopOf="@+id/edtFrom"
            app:layout_constraintStart_toStartOf="@+id/edtFrom" />

        <TextView
            android:id="@+id/tvQuantityConverted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad Convertida"
            app:layout_constraintBottom_toTopOf="@+id/txtFinal"
            app:layout_constraintStart_toStartOf="@+id/txtFinal" />

        <Button
            android:id="@+id/btnConvert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Convertir"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtFinal"
            app:layout_constraintVertical_bias="0.100000024" />

        <TextView
            android:id="@+id/txtFinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:textSize="48sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtFrom"
            tools:text="TextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>